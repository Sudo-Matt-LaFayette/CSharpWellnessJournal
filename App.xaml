<Application x:Class="DailyCheckInJournal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:DailyCheckInJournal.Views"
             xmlns:viewModels="clr-namespace:DailyCheckInJournal.ViewModels"
             xmlns:converters="clr-namespace:DailyCheckInJournal.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DefaultTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:ListToStringConverter x:Key="ListToStringConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:BoolToRadioConverter x:Key="BoolToRadioConverter"/>
            <converters:NullToRadioConverter x:Key="NullToRadioConverter"/>
            <converters:DateTimeToDateConverter x:Key="DateTimeToDateConverter"/>
            
            <!-- ViewModel to View DataTemplates -->
            <DataTemplate DataType="{x:Type viewModels:MorningCheckInViewModel}">
                <views:MorningCheckInView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:EveningCheckInViewModel}">
                <views:EveningCheckInView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:WeeklyReviewViewModel}">
                <views:WeeklyReviewView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:VisualizationViewModel}">
                <views:VisualizationView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
                <views:SettingsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>

