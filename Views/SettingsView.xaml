<UserControl x:Class="DailyCheckInJournal.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DailyCheckInJournal.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Privacy & Security -->
            <GroupBox Header="Privacy &amp; Security" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <CheckBox Content="Require Password" IsChecked="{Binding RequirePassword}"/>
                </StackPanel>
            </GroupBox>

            <!-- Notifications -->
            <GroupBox Header="Notifications" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <CheckBox Content="Enable System Notifications" IsChecked="{Binding EnableSystemNotifications}" Margin="0,0,0,5"/>
                    <CheckBox Content="Enable In-App Notifications" IsChecked="{Binding EnableInAppNotifications}" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="20,5,0,0">
                        <TextBlock Text="Morning Reminder Time:" Width="200" VerticalAlignment="Center"/>
                        <controls:TimePicker SelectedTime="{Binding MorningReminderTime}" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,5,0,0">
                        <TextBlock Text="Evening Reminder Time:" Width="200" VerticalAlignment="Center"/>
                        <controls:TimePicker SelectedTime="{Binding EveningReminderTime}" Width="150"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Theme -->
            <GroupBox Header="Theme" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <ComboBox ItemsSource="{Binding AvailableThemes}" SelectedItem="{Binding SelectedTheme}" Width="200" HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <!-- Google Drive Sync -->
            <GroupBox Header="Google Drive Sync" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <CheckBox Content="Auto-sync to Google Drive" IsChecked="{Binding AutoSyncToGoogleDrive}" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Authenticate Google Drive" Command="{Binding AuthenticateGoogleDriveCommand}" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Sync to Drive Now" Command="{Binding SyncToDriveCommand}" Padding="10,5"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Habits Management -->
            <GroupBox Header="Manage Habits" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox Text="{Binding NewHabitName}" Width="200"/>
                        <Button Content="Add Habit" Command="{Binding AddHabitCommand}" Padding="10,5" Margin="10,0,0,0"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding Habits}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="{Binding Name}" Width="200" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Category}" Width="150" VerticalAlignment="Center"/>
                                    <Button Content="Delete" Command="{Binding DataContext.DeleteHabitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" Padding="5,2" Margin="10,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </GroupBox>

            <!-- Mistake Categories -->
            <GroupBox Header="Mistake Categories" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <Button Content="Add Category" Command="{Binding AddMistakeCategoryCommand}" HorizontalAlignment="Left" Padding="10,5" Margin="0,0,0,10"/>
                    <ItemsControl ItemsSource="{Binding MistakeCategories}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBox Text="{Binding .}" Width="300" VerticalAlignment="Center"/>
                                    <Button Content="Delete" Command="{Binding DataContext.DeleteMistakeCategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" Padding="5,2" Margin="10,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </GroupBox>

            <!-- Success Message -->
            <Border Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" 
                    CornerRadius="5" Padding="15,10" Margin="0,20,0,15"
                    Visibility="{Binding ShowSuccessMessage, Converter={StaticResource BoolToVisibilityConverter}}"
                    HorizontalAlignment="Center"
                    MaxWidth="600">
                <TextBlock Text="{Binding SuccessMessage}" 
                           FontSize="14" 
                           Foreground="#2E7D32"
                           TextWrapping="Wrap"
                           FontWeight="SemiBold"
                           TextAlignment="Center"/>
            </Border>
            
            <!-- Save Button -->
            <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" 
                    HorizontalAlignment="Center" Padding="20,10" FontSize="16" Margin="0,0,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>

